# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For production, use PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=phonix_db
DB_USER=phonix_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Phonix MLM <noreply@phonix.com>

# TronGrid API Configuration (for TRC20 integration)
TRON_API_KEY=your-trongrid-api-key
TRON_NETWORK=mainnet
# mainnet or shasta (testnet)

# Master Wallet Configuration (CRITICAL - Keep secure!)
# This is your platform's main wallet for withdrawals
MASTER_WALLET_ADDRESS=your-master-wallet-trc20-address
MASTER_WALLET_KEY=your-master-wallet-private-key-hex
# IMPORTANT: Generate a new wallet for production and keep the private key EXTREMELY secure!
# On testnet/development, you can use a test wallet
# WARNING: Anyone with this private key can access all funds!

# Application Settings
SITE_URL=http://localhost:8000
ADMIN_EMAIL=admin@phonix.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
# Set to True in production with HTTPS
SESSION_COOKIE_SECURE=False
# Set to True in production with HTTPS
CSRF_COOKIE_SECURE=False
# Set to True in production with HTTPS
